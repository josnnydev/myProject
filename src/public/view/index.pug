doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    title myFirstProject
  body 
  div(class= 'container') 
    h1(class= "text-center") SIGN UP
    div(class='mb-3 row bg-primary')
      div(class='container text-bg-dark p-3 col-sm-5')
        form(action='/handleForm' method='POST')  
          label(class='col-sm-2 col-form-label') NAME:
          input(class='form-control' type='text' placeholder='name' name='name')
          label(class='col-sm-2 col-form-label') LASTNAME:
          input(class='form-control' type='text' placeholder='lastname' name='lastName')
          label(class='col-sm-2 col-form-label') AGE:
          input(class='form-control' type='text' placeholder='age' name='age')
          label(class='col-sm-2 col-form-label') PASSWORD:
          input(class='form-control' type='text' placeholder='password' name='password')
          label(class='col-sm-2 col-form-label') 
          input(class='form-control' type='submit' value='send')
          <!-- JavaScript Bundle with Popper -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>